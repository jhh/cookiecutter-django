{
  "name": "{{cookiecutter.project_slug}}",
  "watch": {
    "build": {
      "patterns": ["{{cookiecutter.project_slug}}"],
      "extensions": "html"
    }
  },
  "scripts": {
    "build": "postcss {{ cookiecutter.project_slug }}/static/css/base.css -o {{ cookiecutter.project_slug }}/static/css/main.css",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "autoprefixer": "^10.4.12",
    "cssnano": "^5.1.13",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.2.1",

    "htmx.org": "^1.8.2",

    "hyperscript.org": "github:aral/_hyperscript"
  }
}
